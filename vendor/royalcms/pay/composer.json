{
    "name": "royalcms/pay",
    "description": "Focus on Alipay and WeChat payment extension packages",
    "keywords": ["alipay", "wechat", "pay"],
    "license": "MIT",
    "type": "library",
    "support": {
        "issues": "https://github.com/royalcms/pay/issues",
        "source": "https://github.com/royalcms/pay"
    },
    "authors": [
        {
            "name": "Royal Wang",
            "email": "hxroyal@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.5.9",
        "ext-openssl": "*",
        "ext-simplexml":"*",
        "monolog/monolog": "^2.0",
        "symfony/http-foundation": "^3.0|^4.0|^5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.2",
        "mockery/mockery": "1.0.x-dev"
    },
    "autoload": {
        "psr-4": {
            "Royalcms\\Component\\Pay\\": "Royalcms/Component/Pay"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "5.x-dev"
        },
        "royalcms": {
            "providers": [
                "Royalcms\\Component\\Pay\\PayServiceProvider"
            ],
            "aliases": {
                "RC_Pay": "Royalcms\\Component\\Pay\\Facades\\Pay"
            }
        }
    },
    "minimum-stability": "dev"
}
